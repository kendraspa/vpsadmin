#!/bin/bash
. /etc/vz/vz.conf
. ${VE_CONFFILE}

<% @mounts.each do |mnt| %>
  <% if mnt['type'] == 'snapshot_local' %>
    SRC="<%= "#{mnt['pool_fs']}/#{mnt['dataset_name']}@#{mnt['snapshot']}" %>"
    DST="<%= mnt['dst'] %>"
    if [ ! -e ${VE_ROOT}${DST} ]; then mkdir -p ${VE_ROOT}${DST}; fi
    mount <%= mnt['mount_opts'] %> ${SRC} ${VE_ROOT}${DST}

  <% elsif mnt['type'] == 'snapshot_remote' %>
    # FIXME: snapshot_remote

  <% else %>
    SRC="<%= mnt['src'] %>"
    DST="<%= mnt['dst'] %>"
    if [ ! -e ${VE_ROOT}${DST} ]; then mkdir -p ${VE_ROOT}${DST}; fi
    mount <%= mnt['mount_opts'] %> -o <%= mnt['mode'] %> ${SRC} ${VE_ROOT}${DST}
  <% end %>
<% end %>

exit 0
